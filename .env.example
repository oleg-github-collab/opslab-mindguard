# OpsLab Mindguard - Environment Variables
# Copy this file to .env and fill in your values

# ========== DATABASE ==========
# PostgreSQL connection string
# Format: postgresql://username:password@host:port/database
# Railway will provide this automatically
DATABASE_URL=postgresql://postgres:password@localhost:5432/mindguard

# ========== ENCRYPTION ==========
# Application encryption key (32 bytes, base64 encoded)
# Generate with: openssl rand -base64 32
APP_ENC_KEY=your_base64_encoded_32_byte_key_here

# Session encryption key (can use same as APP_ENC_KEY)
SESSION_KEY=your_base64_encoded_32_byte_key_here

# ========== TELEGRAM BOT ==========
# Telegram Bot Token from @BotFather
TELEGRAM_BOT_TOKEN=1234567890:ABCdefGHIjklMNOpqrsTUVwxyz

# Bot username (without @) for group mentions
BOT_USERNAME=mindguard_bot

# Admin Telegram ID (Oleg) - for critical alerts
ADMIN_TELEGRAM_ID=123456789

# Manager Telegram ID (Jane) - for critical alerts
JANE_TELEGRAM_ID=987654321

# ========== OPENAI API ==========
# OpenAI API Key for voice transcription and AI analysis
OPENAI_API_KEY=sk-your-openai-api-key-here

# ========== SERVER CONFIGURATION ==========
# Bind address and port
# Railway will override PORT automatically
BIND_ADDR=0.0.0.0:3000

# Logging level (trace, debug, info, warn, error)
RUST_LOG=info

# ========== OPTIONAL ==========
# If you need custom timezone (default: UTC)
# TZ=Europe/Kiev

# ========== BUILD CONFIGURATION ==========
# SQLX Offline Mode - set to true for Docker builds without database connection
# This allows compilation without connecting to the database
# Run `cargo sqlx prepare` before building in offline mode
SQLX_OFFLINE=true

# Production environment detection (enables Secure cookies on HTTPS)
# Automatically detected on Railway/Render/Fly
PRODUCTION=true
